// ObtÃ©n el valor actual de sessionStorage o establece false si aÃºn no existe
var miVariable = sessionStorage.getItem('miVariable') || 'false';

// FunciÃ³n que cambia el valor a true y actualiza sessionStorage
function cambiarValorTrue() {
  miVariable = 'true';
  sessionStorage.setItem('miVariable', miVariable);
}

// Puedes llamar a la funciÃ³n cuando sea necesario
cambiarValorTrue();

// Ahora miVariable tiene el valor true almacenado en sessionStorage
console.log(miVariable);
